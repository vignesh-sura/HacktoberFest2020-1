/*  1. Accept number from user and display below pattern.

    Input :  5

    Output : A B C D E

    Program Layout :

*/


#include<stdio.h>
void Pattern(int iNo)
{
    int icnt=0;
    int ch=0;

    if(iNo<0)
    {
       iNo=-iNo;
    }

    for(ch='A',icnt=1;ch<='Z',icnt<=iNo;icnt++,ch++) // for(ch='A',icnt=1;((ch<='Z')&&(icnt<=iNo));icnt++,ch++)
    {
        printf("%c",ch);
    }
}
int main()
{

 int iValue = 0;

 printf("Enter number of elements");

 scanf("%d",&iValue);

 Pattern(iValue);

 return 0;
}

